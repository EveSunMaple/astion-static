---
const { path, slug, title } = Astro.props;
---

<div id="heading">
  {
    slug && (
      <a
        tabindex="0"
        class="flex not-link text-4xl leading-normal mt-5 font-semibold"
        id={title}
        href={`/${path}/${slug}`}
        target="_self"
        aria-label={title}
      >
        {title}
        <i class="title-anchor my-auto icon-[material-symbols--arrow-forward-ios-rounded]" />
      </a>
    )
  }
  {
    !slug && (
      <h1 id={title} class="text-4xl leading-normal mt-5 font-semibold">
        {title}
      </h1>
    )
  }
</div>
